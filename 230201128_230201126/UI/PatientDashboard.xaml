<Window x:Class="wpf_prolab.UI.PatientDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_prolab.UI"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Diyabet Takip Sistemi - Hasta Paneli" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
        <!-- Common styles -->
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="SubHeaderText">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style TargetType="Button" x:Key="ActionButton">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Panel -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Diyabet Takip Sistemi" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Hasta Paneli" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="txtPatientName" Text="Hasta Ad Soyad" Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button x:Name="btnLogout" Content="Çıkış" Background="Transparent" BorderThickness="1" BorderBrush="White" 
                            Foreground="White" Padding="10,5" Click="btnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="20">
            <!-- Dashboard Tab -->
            <TabItem Header="Genel Durum">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Dashboard Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Genel Durum" Style="{StaticResource HeaderText}"/>
                        
                        
                    </Grid>
                    
                    <!-- Dashboard Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Quick Stats -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Blood Glucose -->
                                <Border Grid.Column="0" Background="#E3F2FD" Padding="15" Margin="0,0,10,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Son Kan Şekeri" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="txtLastGlucose" Text="120 mg/dL" FontSize="22" FontWeight="Bold" Foreground="#2196F3"/>
                                        <TextBlock x:Name="txtLastGlucoseTime" Text="Bugün 10:25" FontSize="12" Foreground="#666666"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Average Glucose -->
                                <Border Grid.Column="1" Background="#E8F5E9" Padding="15" Margin="5,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Günlük Ortalama" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="txtDailyAverage" Text="115 mg/dL" FontSize="22" FontWeight="Bold" Foreground="#4CAF50"/>
                                        <TextBlock Text="Son 7 gün" FontSize="12" Foreground="#666666"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Diet Adherence -->
                                <Border Grid.Column="2" Background="#F3E5F5" Padding="15" Margin="5,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Diyet Uyumu" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="txtDietAdherence" Text="%85" FontSize="22" FontWeight="Bold" Foreground="#9C27B0"/>
                                        <TextBlock Text="Son 30 gün" FontSize="12" Foreground="#666666"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Exercise Adherence -->
                                <Border Grid.Column="3" Background="#FFF3E0" Padding="15" Margin="10,0,0,0" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="Egzersiz Uyumu" FontWeight="SemiBold"/>
                                        <TextBlock x:Name="txtExerciseAdherence" Text="%70" FontSize="22" FontWeight="Bold" Foreground="#FF9800"/>
                                        <TextBlock Text="Son 30 gün" FontSize="12" Foreground="#666666"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                            
                            <!-- Blood Glucose Chart -->
                            <TextBlock Text="Kan Şekeri Grafiği (Son 7 Gün)" Style="{StaticResource SubHeaderText}"/>
                            
                            <Grid Height="300" Margin="0,10,0,20">
                                <lvc:CartesianChart x:Name="chartBloodGlucose" Series="{Binding GlucoseSeries}" 
                                                   LegendLocation="Right" DisableAnimations="True">
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Tarih/Saat" LabelFormatter="{Binding DateTimeFormatter}"/>
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Kan Şekeri (mg/dL)" MinValue="0">
                                            <lvc:Axis.Sections>
                                                <!-- Color-coded sections for glucose levels -->
                                                <lvc:AxisSection Value="0" SectionWidth="70" Fill="#FFE8E8" />
                                                <lvc:AxisSection Value="70" SectionWidth="40" Fill="#E8F5E8" />
                                                <lvc:AxisSection Value="110" SectionWidth="70" Fill="#FFF7E6" />
                                                <lvc:AxisSection Value="180" SectionWidth="120" Fill="#FFDED6" />
                                            </lvc:Axis.Sections>
                                        </lvc:Axis>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Grid>
                            
                            <!-- Recent Measurements -->
                            <TextBlock Text="Son Ölçümler" Style="{StaticResource SubHeaderText}"/>
                            
                            <DataGrid x:Name="gridRecentMeasurements" AutoGenerateColumns="False" IsReadOnly="True" 
                                     Margin="0,10,0,20" HeadersVisibility="Column" GridLinesVisibility="Horizontal" Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tarih" Binding="{Binding MeasurementTime, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                                    <DataGridTextColumn Header="Saat" Binding="{Binding MeasurementTime, StringFormat={}{0:HH:mm}}" Width="80"/>
                                    <DataGridTextColumn Header="Tür" Binding="{Binding MeasurementType}" Width="100"/>
                                    <DataGridTextColumn Header="Değer (mg/dL)" Binding="{Binding MeasurementValue}" Width="120"/>
                                    <DataGridTemplateColumn Header="Durum" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border Background="{Binding StatusColor}" CornerRadius="3" Padding="5,2">
                                                    <TextBlock Text="{Binding StatusText}" Foreground="White" HorizontalAlignment="Center"/>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="İnsülin Dozu" Binding="{Binding InsulinDose}" Width="100"/>
                                    <DataGridTextColumn Header="Notlar" Binding="{Binding Notes}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- Upcoming Reminders -->
                            <TextBlock Text="Yaklaşan Hatırlatmalar" Style="{StaticResource SubHeaderText}"/>
                            
                            <DataGrid x:Name="gridReminders" AutoGenerateColumns="False" IsReadOnly="True" 
                                     Margin="0,10,0,0" HeadersVisibility="Column" GridLinesVisibility="Horizontal" Height="150">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Tarih/Saat" Binding="{Binding ReminderTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="150"/>
                                    <DataGridTextColumn Header="Tür" Binding="{Binding ReminderType}" Width="120"/>
                                    <DataGridTextColumn Header="Açıklama" Binding="{Binding Description}" Width="*"/>
                                    <DataGridTemplateColumn Header="Durum" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding StatusText}" Foreground="{Binding StatusColor}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Measurements Tab -->
            <TabItem Header="Ölçümler">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with Add Button -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Kan Şekeri Ölçümleri" Style="{StaticResource HeaderText}"/>
                        
                        <Button Grid.Column="1" Content="Yeni Ölçüm Ekle" Style="{StaticResource ActionButton}" 
                                Click="btnAddMeasurement_Click"/>
                    </Grid>
                    
                    <!-- Measurements List -->
                    <DataGrid Grid.Row="1" x:Name="gridAllMeasurements" AutoGenerateColumns="False" IsReadOnly="True" 
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tarih" Binding="{Binding MeasurementTime, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                            <DataGridTextColumn Header="Saat" Binding="{Binding MeasurementTime, StringFormat={}{0:HH:mm}}" Width="80"/>
                            <DataGridTextColumn Header="Tür" Binding="{Binding MeasurementType}" Width="100"/>
                            <DataGridTextColumn Header="Değer (mg/dL)" Binding="{Binding MeasurementValue}" Width="120"/>
                            <DataGridTemplateColumn Header="Durum" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="{Binding StatusColor}" CornerRadius="3" Padding="5,2">
                                            <TextBlock Text="{Binding StatusText}" Foreground="White" HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="İnsülin Dozu" Binding="{Binding InsulinDose}" Width="100"/>
                            <DataGridTextColumn Header="Notlar" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Diet & Exercise Tab -->
            <TabItem Header="Diyet ve Egzersiz">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Diyet ve Egzersiz Planları" Style="{StaticResource HeaderText}"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Diet Plans -->
                            <TextBlock Text="Diyet Planım" Style="{StaticResource SubHeaderText}"/>
                            
                            <DataGrid x:Name="gridDietPlans" AutoGenerateColumns="False" IsReadOnly="True" 
                                      Margin="0,10,0,20" HeadersVisibility="Column" GridLinesVisibility="Horizontal" Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Başlangıç" Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                                    <DataGridTextColumn Header="Bitiş" Binding="{Binding EndDateDisplay}" Width="100"/>
                                    <DataGridTextColumn Header="Diyet Türü" Binding="{Binding DietTypeDisplay}" Width="150"/>
                                    <DataGridTextColumn Header="Doktor Notu" Binding="{Binding DoctorNotes}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- Exercise Plans -->
                            <TextBlock Text="Egzersiz Planım" Style="{StaticResource SubHeaderText}"/>
                            
                            <DataGrid x:Name="gridExercisePlans" AutoGenerateColumns="False" IsReadOnly="True" 
                                      Margin="0,10,0,20" HeadersVisibility="Column" GridLinesVisibility="Horizontal" Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Başlangıç" Binding="{Binding StartDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                                    <DataGridTextColumn Header="Bitiş" Binding="{Binding EndDateDisplay}" Width="100"/>
                                    <DataGridTextColumn Header="Egzersiz Türü" Binding="{Binding ExerciseTypeDisplay}" Width="150"/>
                                    <DataGridTextColumn Header="Doktor Notu" Binding="{Binding DoctorNotes}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            
                            <!-- Daily Tracking -->
                            <TextBlock Text="Günlük Takip" Style="{StaticResource SubHeaderText}"/>
                            
                            <Grid Margin="0,10,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Bugün diyetime uydum:" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                    <CheckBox x:Name="chkDietFollowed" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Content="Kaydet" Style="{StaticResource ActionButton}" Click="btnSaveDietTracking_Click"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Bugün egzersizimi yaptım:" VerticalAlignment="Center" Margin="0,20,20,0"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,20,0,0">
                                    <CheckBox x:Name="chkExerciseDone" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                    <Button Content="Kaydet" Style="{StaticResource ActionButton}" Click="btnSaveExerciseTracking_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Symptoms Tab -->
            <TabItem Header="Semptomlar">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Semptom Takibi" Style="{StaticResource HeaderText}"/>
                        
                       
                    </Grid>
                    
                    <!-- Add Symptom Panel -->
                    <Grid Grid.Row="1" Margin="0,0,0,20" x:Name="panelAddSymptom" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Labels -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Semptom:" Margin="0,0,10,5" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="Şiddet:" Margin="10,0,10,5" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="Notlar:" Margin="10,0,0,5" FontWeight="SemiBold"/>
                        
                        <!-- Controls -->
                        <ComboBox Grid.Row="1" Grid.Column="0" x:Name="cmbSymptomType" Margin="0,0,10,0" 
                                  DisplayMemberPath="Content" SelectedValuePath="Content"
                                  SelectionChanged="SymptomTypeSelectionChanged">
                            <ComboBoxItem Content="Poliüri (Sık idrara çıkma)"/>
                            <ComboBoxItem Content="Polifaji (Aşırı açlık hissi)"/>
                            <ComboBoxItem Content="Polidipsi (Aşırı susama hissi)"/>
                            <ComboBoxItem Content="Nöropati"/>
                            <ComboBoxItem Content="Kilo kaybı"/>
                            <ComboBoxItem Content="Yorgunluk"/>
                            <ComboBoxItem Content="Yaraların yavaş iyileşmesi"/>
                            <ComboBoxItem Content="Bulanık görme"/>
                        </ComboBox>
                        
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbSymptomIntensity" Margin="10,0" 
                                 DisplayMemberPath="Content" SelectedValuePath="Tag"
                                 SelectionChanged="SymptomIntensitySelectionChanged">
                            <ComboBoxItem Content="Hafif (1)" Tag="1"/>
                            <ComboBoxItem Content="Orta (2)" Tag="2"/>
                            <ComboBoxItem Content="Şiddetli (3)" Tag="3"/>
                            <ComboBoxItem Content="Çok Şiddetli (4)" Tag="4"/>
                            <ComboBoxItem Content="Dayanılmaz (5)" Tag="5"/>
                        </ComboBox>
                        
                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtSymptomNotes" Margin="10,0" />
                        
                        <Button Grid.Row="1" Grid.Column="3" Content="Ekle" Style="{StaticResource ActionButton}" Margin="10,0,0,0"
                                Click="btnSaveSymptom_Click"/>
                    </Grid>
                    
                    <!-- Symptoms List -->
                    <DataGrid Grid.Row="2" x:Name="gridSymptoms" AutoGenerateColumns="False" IsReadOnly="True" 
                             HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tarih" Binding="{Binding SymptomDate, StringFormat={}{0:dd.MM.yyyy}}" Width="100"/>
                            <DataGridTextColumn Header="Semptom" Binding="{Binding SymptomDisplay}" Width="200"/>
                            <DataGridTextColumn Header="Şiddet" Binding="{Binding Intensity}" Width="80"/>
                            <DataGridTextColumn Header="Notlar" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Recommendations Tab -->
            <TabItem Header="🎯 Öneriler">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Akıllı Sağlık Önerileri" Style="{StaticResource HeaderText}"/>
                    
                    <!-- Refresh Button -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,20">
                        <Button x:Name="btnRefreshRecommendations" Content="🔄 Önerileri Yenile" 
                                Style="{StaticResource ActionButton}" Click="btnRefreshRecommendations_Click"/>
                        <TextBlock x:Name="txtLastUpdated" Text="Son güncelleme: --" 
                                   VerticalAlignment="Center" Margin="20,0,0,0" FontStyle="Italic"/>
                    </StackPanel>
                    
                    <!-- Recommendations List -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstRecommendations">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,15" CornerRadius="8" Padding="15" 
                                            Background="{Binding PriorityBrush}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <!-- Header -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" Text="{Binding Title}" 
                                                           FontWeight="Bold" FontSize="16" Foreground="White"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Category}" 
                                                           FontSize="12" Foreground="White" FontStyle="Italic"/>
                                            </Grid>
                                            
                                            <!-- Message -->
                                            <TextBlock Grid.Row="1" Text="{Binding Message}" 
                                                       Margin="0,5,0,10" TextWrapping="Wrap" Foreground="White"/>
                                            
                                            <!-- Actions -->
                                            <ItemsControl Grid.Row="2" ItemsSource="{Binding Actions}" 
                                                          Visibility="{Binding HasActions, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding ., StringFormat='• {0}'}" 
                                                                   Margin="10,2,0,2" Foreground="White" FontSize="12"/>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            
                                            <!-- Timestamp -->
                                            <TextBlock Grid.Row="3" Text="{Binding CreatedAt, StringFormat='Oluşturulma: {0:dd.MM.yyyy HH:mm}'}" 
                                                       Margin="0,10,0,0" FontSize="10" Foreground="White" HorizontalAlignment="Right"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Profile Tab -->
            <TabItem Header="Profil">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Hesap Bilgilerim" Style="{StaticResource HeaderText}"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Width="500" HorizontalAlignment="Left">
                            <!-- Basic Info -->
                            <Border Background="#F5F5F5" Padding="20" Margin="0,0,0,20" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="TC Kimlik No:" FontWeight="SemiBold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtProfileTcId" Text="12345678901"/>
                                    
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Ad Soyad:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtProfileName" Text="Ad Soyad" Margin="0,10,0,0"/>
                                    
                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Doğum Tarihi:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtProfileBirthDate" Text="01.01.1990" Margin="0,10,0,0"/>
                                    
                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Yaş:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtProfileAge" Text="33" Margin="0,10,0,0"/>
                                    
                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Cinsiyet:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="txtProfileGender" Text="Erkek" Margin="0,10,0,0"/>
                                    
                                    <TextBlock Grid.Row="5" Grid.Column="0" Text="E-posta:" FontWeight="SemiBold" Margin="0,10,0,0"/>
                                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="txtProfileEmail" Text="email@example.com" Margin="0,10,0,0"/>
                                </Grid>
                            </Border>
                            
                            <!-- Profile Picture -->
                            <TextBlock Text="Profil Resmi" Style="{StaticResource SubHeaderText}"/>
                            
                            <Border Background="#F5F5F5" Padding="20" Margin="0,10,0,20" CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Profile Image Display -->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Width="150" Height="150" 
                                            Background="LightGray" CornerRadius="75" Margin="0,0,0,15" HorizontalAlignment="Center">
                                        <Image x:Name="imgProfilePicture" Stretch="UniformToFill"/>
                                    </Border>
                                    
                                    <!-- Upload Button -->
                                    <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="Profil Resmi Yükle" 
                                            HorizontalAlignment="Center" Style="{StaticResource ActionButton}"
